<div class="row sub-fields parent-pair">
  <div class="col-6">
    <!-- MinimumValue -->
    <%= mmt_text_field(
      name: 'minimum_value',
      title: 'Minimum Value',
      prefix: name_prefix,
      value: tiling_coordinate['MinimumValue'],
      validate: true,
      classes: 'mmt-number lesser-pair'
     ) %>
  </div>
  <div class="col-6">
    <!-- MaximumValue -->
    <%= mmt_text_field(
      name: 'maximum_value',
      title: 'Maximum Value',
      prefix: name_prefix,
      value: tiling_coordinate['MaximumValue'],
      validate: true,
      classes: 'mmt-number greater-pair'
     ) %>
  </div>
</div>

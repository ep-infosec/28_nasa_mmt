    ) %>
    <div class="eui-accordion__icon" tabindex="0">
      <i class="eui-icon eui-fa-chevron-circle-down"></i>
      <span class="eui-sr-only">Toggle Temporal Keywords</span>
    </div>
  </div>
  <div class="eui-accordion__body">
    <div class="row">
      <div class="col-12">
        <%= mmt_select(
          name: 'temporal_keywords',
          title: 'Temporal Keywords',
          prefix: 'draft_',
          value: draft.draft['TemporalKeywords'],
          options: @temporal_keywords,
          help: 'properties/TemporalKeywords',
          multiple: true,
          classes: 'mmt-fake-enum multi-select'
        ) %>
      </div>
    </div>
  </div>
</fieldset>


<!-- File Archive Information -->
<fieldset class="eui-accordion is-closed" id="file-archive-information">
  <% file_archive_information_value = draft.draft.dig('ArchiveAndDistributionInformation','FileArchiveInformation') || [{}] %>
  <div class="eui-accordion__header">
    <h3 class="eui-accordion__title eui-required-o">File Archive Information</h3>
    <%= mmt_help_icon(
          title: 'File Archive Information',
          help: 'definitions/FileArchiveInformationType'
        ) %>
    <div class="eui-accordion__icon" tabindex="0">
      <i class="eui-icon eui-fa-chevron-circle-down"></i>
      <span class="eui-sr-only">Toggle File Archive Information</span>
    </div>
  </div>
  <div class="eui-accordion__body">
    <div class="row taller">
      <div class="col-12">
        <%= render partial: 'collection_drafts/forms/type', locals: {
          type: 'file_archive_information',
          values: file_archive_information_value,
          name_prefix: "draft_|archive_and_distribution_information|_|file_archive_information|_",
          multiple: true,
          validate: true,
          options: {} } %>
      </div>
    </div>
  </div>
</fieldset>


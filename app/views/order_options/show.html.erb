<div class="row row-content">
  <section>
    <h2><%= @order_option['name'] %></h2>

    <p>
      <span class="inline-label">Last Update:</span> <%= echo_formatted_date(@order_option['last_update'], default: 'Never Updated') %> |
      <span class="inline-label">Scope:</span> <%= @order_option['scope'] %> |
      <span class="inline-label">Deprecated:</span> <%= @order_option['deprecated'] %> |
      <span class="inline-label">Sort Key:</span> <%= @order_option['sort_key'] %>
    </p>

    <p>
      <span class="inline-label">Description:</span>
      <%= @order_option['description'] %>
    </p>

    <div class="row">
      <span class="inline-label">Form XML:</span>

      <pre><%= @order_option['form'] %></pre>
    </div>

    <%= link_to 'Edit', edit_order_option_path(@order_option['id']), class: 'eui-btn' %>

    <% unless @order_option.fetch('deprecated', false) %>
        <%= link_to 'Deprecate', "#deprecate-order-option-modal", class: 'display-modal eui-btn' %>
        <div id="deprecate-order-option-modal" class="eui-modal-content">
          <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
          <p>Are you sure you want to deprecate this order option? This action cannot be undone.</p>
          <p>
            <a href="javascript:void(0)" class="eui-btn modal-close">No</a>
            <%= link_to 'Yes', order_option_deprecate_path(@order_option['id']), method: :post, class: 'eui-btn--blue spinner' %>
          </p>
        </div>
    <% end %>

    <%= link_to 'Delete', "#delete-order-option-modal", class: 'display-modal eui-btn eui-btn--red' %>
    <div id="delete-order-option-modal" class="eui-modal-content">
      <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
      <p>Are you sure you want to delete this order option?</p>
      <p>
        <a href="javascript:void(0)" class="eui-btn modal-close">No</a>
        <%= link_to 'Yes', order_option_path(@order_option['id']), method: :delete, class: 'eui-btn--blue spinner' %>
      </p>
    </div>
  </section>
</div>
